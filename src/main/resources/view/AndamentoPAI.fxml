<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AndamentoPAIController">

    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Novo Cadastro" />
                        <MenuItem mnemonicParsing="false" text="Plano de Acompanhamento Individual (PAI)" />
                        <MenuItem mnemonicParsing="false" text="Acompanhamento PAI" />
                        <MenuItem mnemonicParsing="false" text="Historico de Intervenções" />
                        <MenuItem mnemonicParsing="false" text="Cadastro de Rendimento" />
                        <MenuItem mnemonicParsing="false" text="Acompanhamento Escolar" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Sair" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Perfil" />
                        <MenuItem mnemonicParsing="false" text="Dados do Aluno/Responsável" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Sobre">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Projeto" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <children>
                        <Label layoutX="237.0" layoutY="98.0" text="Andamento dos Planos de Acompanhamento Individual " textFill="#3d5390">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="tabelaPAIs" layoutX="70.0" layoutY="184.0" prefHeight="280.0" prefWidth="758.0">
                            <columns>
                                <TableColumn fx:id="colTitulo" prefWidth="210.0" text="Título" />
                                <TableColumn fx:id="colAluno" prefWidth="210.0" text="Aluno" />
                                <TableColumn fx:id="colResponsavel" prefWidth="150.0" text="Responsável" />
                                <TableColumn fx:id="colStatus" prefWidth="90.0" text="Status" />
                                <TableColumn fx:id="colRevisao" prefWidth="96.0" text="Revisão" />
                            </columns>
                        </TableView>

                        <Label layoutX="71.0" layoutY="163.0" text="Planos em Aberto:" />

                        <Button fx:id="btAbrirDescricao" disable="true" layoutX="430.0" layoutY="485.0" mnemonicParsing="false" onAction="#onClickAbrirDescricao" prefHeight="27.0" prefWidth="120.0" text="Ver Detalhes" />
                        <Button fx:id="btCriarFinalizacao" disable="true" layoutX="565.0" layoutY="485.0" mnemonicParsing="false" onAction="#onClickCriarFinalizacao" prefHeight="27.0" prefWidth="120.0" text="Finalizar PAI" />

                        <Button fx:id="btVoltar" layoutX="708.0" layoutY="485.0" mnemonicParsing="false" onAction="#onClickVoltar" prefHeight="27.0" prefWidth="120.0" text="Voltar" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
</VBox>